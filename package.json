{
  "name": "@jhae/stylelint-rule-tester",
  "description": "A Stylelint rule tester for Jest.",
  "version": "1.1.0",
  "main": "./dist/rule-test.class.js",
  "types": "./types/rule-test.class.d.ts",
  "author": {
    "name": "JHAE",
    "url": "https://github.com/jhae-de"
  },
  "repository": {
    "url": "https://github.com/jhae-de/stylelint-rule-tester.git",
    "type": "git"
  },
  "homepage": "https://github.com/jhae-de/stylelint-rule-tester",
  "license": "MIT",
  "scripts": {
    "lint": "npm run-script lint:prettier && npm run-script lint:eslint",
    "lint:prettier": "prettier --ignore-path .gitignore --check .",
    "lint:eslint": "eslint --ignore-path .gitignore .",
    "test": "jest",
    "test:watch": "npm run-script test -- --watchAll",
    "test:coverage": "npm run-script test -- --coverage",
    "test:watch:coverage": "npm run-script test:watch -- --coverage",
    "build": "tsc"
  },
  "devDependencies": {
    "@tsconfig/node20": "^20.1.2",
    "@types/jest": "^29.5.11",
    "@typescript-eslint/eslint-plugin": "^6.16.0",
    "@typescript-eslint/parser": "^6.16.0",
    "eslint": "^9.4.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.2",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  },
  "peerDependencies": {
    "stylelint": "^16.1.0"
  },
  "keywords": [
    "stylelint",
    "stylelint-scss",
    "stylelintrc",
    "configuration",
    "config",
    "rule",
    "rules",
    "test",
    "jest",
    "ts-jest",
    "helper"
  ]
}
